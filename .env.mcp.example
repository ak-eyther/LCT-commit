# MCP Server Environment Variables
# Copy this to ~/.claude_mcp_env and fill in your actual values

# Linear
export LINEAR_API_KEY="lin_api_your_key_here"

# Vercel
export VERCEL_TOKEN="your_vercel_token_here"

# Amplitude (move from config)
export AMPLITUDE_API_KEY="your_amplitude_key"
export AMPLITUDE_SECRET_KEY="your_amplitude_secret"

# Google Analytics (move from config)
export GOOGLE_CLIENT_EMAIL="your_client_email"
export GOOGLE_PRIVATE_KEY="your_private_key"
export GA_PROPERTY_ID="your_property_id"

# GitHub (if using)
export GITHUB_PERSONAL_ACCESS_TOKEN="your_github_token"
